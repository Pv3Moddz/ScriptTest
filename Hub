local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "@Pv3Moddz Hub", HidePremium = false, SaveConfig = true, ConfigFolder = "RaceClickTest"})
local lp = game:GetService("Players").LocalPlayer
local LP = lp.Character.HumanoidRootPart

_AutoPower = 1
_AutoDiamond = 1

local Tab = Window:MakeTab({
	Name = "Menu Hub",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

local Section = Tab:AddSection({
	Name = "SETTINGS"
})

Tab:AddSlider({
	Name = "Delay Auto Power",
	Min = 0,
	Max = 1000,
	Default = 1000,
	Color = Color3.fromRGB(255,255,255),
	Increment = 10,
	ValueName = "MilleSeg",
	Callback = function(Value)
		_AutoPower = Value / 1000
	end
})

Tab:AddToggle({
	Name = "Auto Power",
	Default = false,
	Callback = function(Value)
        while Value do
            game:GetService("ReplicatedStorage").Remotes.TrainBombStrength:FireServer("Bomb 14")
            wait(_AutoPower)
        end
	end
})

Tab:AddSlider({
	Name = "Delay Auto Diamond",
	Min = 0,
	Max = 1000,
	Default = 1000,
	Color = Color3.fromRGB(255,255,255),
	Increment = 10,
	ValueName = "MilleSeg",
	Callback = function(Value)
		_AutoDiamond = Value / 1000
	end
})

Tab:AddToggle({
	Name = "Auto Diamond",
	Default = false,
	Callback = function(Value)
        while Value do
            game:GetService("ReplicatedStorage").Remotes.GetGem:FireServer()
            wait(_AutoDiamond)
        end
	end
})

OrionLib:Init()
