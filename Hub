local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "@Pv3Moddz Hub", HidePremium = false, SaveConfig = true, ConfigFolder = "ScriptTest"})

local Players = game:GetService("Players")
local lp = Players.LocalPlayer

_AutoPower = 1
_AutoPowerV = false
_AutoDiamondV = false
_AutoWin = 1
_AutoWinV = false

function AutoPower()
    while _AutoPowerV == true do
        game:GetService("ReplicatedStorage").Remotes.TrainBombStrength:FireServer("Bomb 1")
        wait(_AutoPower)
    end
end

function AutoDiamond()
    while _AutoDiamondV == true do
        game:GetService("ReplicatedStorage").Remotes.GetGem:FireServer()
        wait(0.5)
    end
end

function AutoWin()
    while _AutoWinV == true do
        local char = lp.Character
        local hum = char.Humanoid
        local hrp = char.HumanoidRootPart
        hrp.CFrame = hrp.CFrame + Vector3.new(0, -1000, 0)
        wait(_AutoWin)
    end
end

local Tab = Window:MakeTab({
	Name = "Menu Hub",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

local Section = Tab:AddSection({
	Name = "SETTINGS"
})

Tab:AddSlider({
	Name = "Delay Auto Power",
	Min = 0,
	Max = 1000,
	Default = 1000,
	Color = Color3.fromRGB(255,255,255),
	Increment = 10,
	ValueName = "MilleSeg",
	Callback = function(Value)
		_AutoPower = Value / 1000
	end
})

Tab:AddToggle({
	Name = "Auto Power",
	Default = false,
	Callback = function(Value)
	    _AutoPowerV = Value
	    AutoPower()
	end
})

Tab:AddToggle({
	Name = "Auto Collect Diamond",
	Default = false,
	Callback = function(Value)
	    _AutoDiamondV = Value
        AutoDiamond()
	end
})

Tab:AddSlider({
	Name = "Delay Auto Win",
	Min = 0,
	Max = 1000,
	Default = 1000,
	Color = Color3.fromRGB(255,255,255),
	Increment = 10,
	ValueName = "MilleSeg",
	Callback = function(Value)
		_AutoWin = Value / 1000
	end
})

Tab:AddToggle({
	Name = "Auto Win",
	Default = false,
	Callback = function(Value)
	    _AutoWinV = Value
        AutoWin()
	end
})

local Tab = Window:MakeTab({
	Name = "Shop",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

local Section = Tab:AddSection({
	Name = "EGG SHOPS"
})

