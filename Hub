Tab:AddButton({
	Name = "Buy Jungle Egg ( 8KüèÜ )",
	Callback = function()
        game:GetService("ReplicatedStorage").Remotes.HatchEgg:InvokeServer("Jungle Egg")
  	end
})

Tab:AddButton({
	Name = "Buy Cave Egg ( 140KüèÜ )",
	Callback = function()
        game:GetService("ReplicatedStorage").Remotes.HatchEgg:InvokeServer("Cave Egg")
  	end
})

Tab:AddButton({
	Name = "Buy Island Egg ( 3.9MüèÜ )",
